{
    "name": "botman/driver-whatsapp",
    "description": "Botman Whatsap api driver for laravel",
    "keywords": [
        "stephenmudere",
        "driver-whatsapp"
    ],
    "homepage": "https://github.com/stephenmudere/driver-whatsapp",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Stephen Mudere",
            "email": "muderesteph@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "botman/botman": "~2.1|~3.0"
    },
    "require-dev": {
        "botman/studio-addons": "^1.0",
        "phpunit/phpunit": "^5.0",
        "illuminate/contracts": "^5.5",
        "mockery/mockery": "^1.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Botman\\WhatsappDriver\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Botman\\WhatsappDriver\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Botman\\WhatsappDriver\\WhatsappDriverServiceProvider"
            ],
            "aliases": {
                "WhatsappDriver": "Botman\\WhatsappDriver\\WhatsappDriverFacade"
            }
        }
    }
}
